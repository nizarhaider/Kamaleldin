<script>
  const buttons = document.querySelectorAll('[data-target]');
  buttons.forEach(button => {
    button.addEventListener('click', function(event) {
      event.preventDefault();

      // Hide all sections using Tailwind's 'hidden' class
      document.querySelectorAll('[id$="-content"]').forEach(section => {
        section.classList.add('hidden');
      });

      // Show the target section using Tailwind's 'block' class
      const targetId = this.getAttribute('data-target');
      const targetSection = document.getElementById(targetId);
      if (targetSection) {
        targetSection.classList.remove('hidden');
        targetSection.classList.add('block');
      }

      // Remove the selected appearance from all buttons
      buttons.forEach(btn => {
        btn.classList.add('border', 'font-normal');
        btn.classList.remove('border-0', 'font-bold');
      });

      // Add the selected appearance to the clicked button
      this.classList.remove('border', 'font-normal');
      this.classList.add('border-0', 'font-bold');
    });
  });

  // Automatically click the "Overview" button on page load
  document.querySelector('[data-target="overview-content"]').click();
</script>


